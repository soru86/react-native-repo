// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  USER
}

enum PortfolioStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum AssetType {
  STOCK
  BOND
  CRYPTO
  REAL_ESTATE
  COMMODITY
  OTHER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  portfolios Portfolio[] @relation("PortfolioOwner")
  createdBy  Portfolio[] @relation("PortfolioCreator")
  
  @@map("users")
}

model Portfolio {
  id          String          @id @default(cuid())
  name        String
  description String?
  status      PortfolioStatus @default(ACTIVE)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  
  ownerId     String
  owner       User            @relation("PortfolioOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  createdById String
  createdBy   User            @relation("PortfolioCreator", fields: [createdById], references: [id])
  
  assets      Asset[]
  
  @@map("portfolios")
}

model Asset {
  id          String     @id @default(cuid())
  name        String
  symbol      String?
  type        AssetType
  quantity    Float      @default(0)
  price       Float      @default(0)
  value       Float      @default(0)
  currency    String     @default("USD")
  purchaseDate DateTime?
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  portfolioId String
  portfolio   Portfolio  @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  @@map("assets")
}


